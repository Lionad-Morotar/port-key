{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["node"],
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
